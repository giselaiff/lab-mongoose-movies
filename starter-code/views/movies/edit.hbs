<form action="/movies/{{movie._id}}" method="post">
  <label for="title">Title</label>
  <input type="text" name="title" id="movie-title" placeholder="title" value="{{movie.title}}">
  <label for="genre">Genre</label>
  <input type="text" name="genre" id="movie.genre" value="{{movie.genre}}">
  <label for="plot">Plot</label>
  <input type="text" name="plot" id="movie.plot" value="{{movie.plot}}">
  <button type="submit">submit</button>
</form> 